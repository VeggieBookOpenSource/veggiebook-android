<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"

    >


    <ImageView
        android:id="@+id/bookImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="88sp"
        android:id="@+id/viewStub"
        android:layout_gravity="bottom"
        android:clickable="false"
        android:background="@drawable/gradient_background_selecter"
        android:focusable="false"
        android:focusableInTouchMode="false"
       />

    <TextView
        android:id="@+id/veggie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:padding="16sp"
        android:paddingTop="60sp"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <ImageView
        android:background="@drawable/container_dropshadow"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:id="@+id/smallImage"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        android:visibility="gone"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"/>


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/checkBackground2"
        android:layout_gravity="right|top"
        android:layout_marginTop="23dp"
        android:layout_marginRight="23dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:baselineAlignBottom="false"
        android:visibility="visible"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/checkBackground"
        android:layout_gravity="right|top"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_check_off_focused_holo_light"
        android:baselineAlignBottom="false"
        android:visibility="visible"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/check"
        android:layout_gravity="right|top"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/btn_check_on_focused_holo_light"
        android:visibility="visible"/>

</FrameLayout>